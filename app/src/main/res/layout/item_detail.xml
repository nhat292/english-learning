<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_padding_5dp"
        android:layout_marginLeft="@dimen/margin_padding_10dp"
        android:layout_marginRight="@dimen/margin_padding_10dp"
        android:layout_marginTop="@dimen/margin_padding_5dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_padding_10dp">

            <TextView
                android:id="@+id/txtContent"
                style="@style/TextStyle.Title.Sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1. Common Expressions" />

            <ImageButton
                android:id="@+id/imgBtnPlayPause"
                android:layout_width="@dimen/play_pause_button_size_item"
                android:layout_height="@dimen/play_pause_button_size_item"
                android:background="@android:color/transparent"
                android:foreground="?attr/actionBarItemBackground"
                android:padding="@dimen/margin_padding_5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>